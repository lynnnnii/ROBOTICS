#include<Wire.h>
#include<LiquidCrystal_l2C.h>
#include <Keypad.h>

const byte ROWS = 4; //4행(row)
const byte COLS = 4; //4열(column)
char keys[ROWS][COLS] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','#','D'}
};
byte rowPins[ROWS] = {9,8,7,6}; //연결된 PIN
byte colPins[COLS] = {5,4,3,2};

Keypad keypad(makeKeymap(keys),rowPins,colPins,ROWS,COLS);

LiquidCrystal_I2C lcd(0x27, 16, 2);  


String password = "123456"; //비밀번호

String userInput = ""; //사용자 입력값 저장
int count = 0; //몇 번 눌러졌는지 카운트

void setup(){
  Serial.begin(9600);
  Serial.println("Press password");
  lcd.backlight();
  lcd.init();
}

void loop(){
  char key = keypad.getKey();

  if(key){
    Serial.println(key);
    userInput +=key;
    count +=1;
  }
  if(count == 6)
  {
    count = 0;
    if(userInput == password)
    {
      Serial.println();
      Serial.println("Welcone!");
    }
    else
    {
      Serial.println();
      Serial.println("Incorrect password");
    }
    userInput = "";
  }
   char customKey = customKeypad.getKey();
  if (customKey){
    lcd.clear();
    lcd.setCursor(0, 0); 
    lcd.print(customKey);
  }

}
